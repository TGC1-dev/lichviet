<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:lib="http://schemas.android.com/apk/res-auto" android:id="@+id/layoutGieoQue" style="@style/Layout.FillWidthHeight.Vertical">
    <include layout="@layout/layout_header_lichvannien2"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/bg_bottom" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="100" android:layout_below="@+id/layoutHeaderLichVanNien">
        <FrameLayout android:layout_gravity="center" android:orientation="vertical" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="20">
            <TextView android:textSize="@dimen/activity_gieo_que_title_text_size" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/textViewGieoQue" android:background="@drawable/bg_gieo_que" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/activity_gieo_que_button_height" android:text="Lắc máy để gieo quẻ"/>
        </FrameLayout>
        <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="80">
            <ImageView android:layout_gravity="center" android:id="@+id/imageViewGieoQue" android:background="@drawable/animation_gieo_que" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView android:layout_gravity="center" android:id="@+id/imageViewQue" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/que" android:layout_centerInParent="true"/>
</RelativeLayout>
