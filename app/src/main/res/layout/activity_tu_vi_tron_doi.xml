<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:lib="http://schemas.android.com/apk/res-auto" android:id="@+id/layoutTuViTronDoi" style="@style/Layout.FillWidthHeight.Vertical">
    <include layout="@layout/layout_header_lichvannien2"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/bg_bottom" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="100">
        <vn.net.vac.base.view.SquareImageView android:gravity="center" android:layout_gravity="center" android:padding="20dp" android:layout_width="match_parent" android:layout_height="0dp" android:src="@drawable/tuvitrondoi" android:layout_weight="50"/>
        <LinearLayout android:orientation="vertical" android:background="@drawable/bg_rounded_conner" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:weightSum="40" android:layout_weight="30">
            <LinearLayout android:orientation="horizontal" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="@dimen/acivity_tu_vi_12_con_giap_select_size" android:weightSum="100">
                <TextView android:textSize="@dimen/tu_vi_spinner_text_size" android:ellipsize="start" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center" android:id="@+id/lblChonTuoi" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_marginBottom="2dp" android:text="Chọn tuổi:" android:singleLine="true" android:layout_weight="40"/>
                <Spinner android:textSize="@dimen/tu_vi_spinner_text_size" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/spinnerChonTuoi" android:background="@drawable/spinner_bg" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="60"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="@dimen/acivity_tu_vi_12_con_giap_select_size" android:weightSum="100">
                <TextView android:textSize="@dimen/tu_vi_spinner_text_size" android:ellipsize="start" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center" android:id="@+id/lblChonCanChi" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_marginBottom="2dp" android:text="Chọn can chi:" android:singleLine="true" android:layout_weight="40"/>
                <Spinner android:textSize="@dimen/tu_vi_spinner_text_size" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/spinnerChonCanChi" android:background="@drawable/spinner_bg" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="60"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="@dimen/acivity_tu_vi_12_con_giap_select_size" android:weightSum="100">
                <TextView android:textSize="@dimen/tu_vi_spinner_text_size" android:ellipsize="start" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center" android:id="@+id/lblChonGioiTinh" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_marginBottom="2dp" android:text="Chọn giới tính:" android:singleLine="true" android:layout_weight="40"/>
                <RadioGroup android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/radioGroupGioiTinh" android:layout_width="0dp" android:layout_height="match_parent" android:weightSum="100" android:layout_weight="60">
                    <RadioButton android:textSize="@dimen/tu_vi_spinner_text_size" android:gravity="center" android:layout_gravity="center" android:id="@+id/radioNam" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="2dp" android:checked="true" android:button="@null" android:text=" Nam" android:maxLines="1" android:drawableLeft="@drawable/radio_button_selector" android:layout_weight="50"/>
                    <RadioButton android:textSize="@dimen/tu_vi_spinner_text_size" android:gravity="center" android:layout_gravity="center" android:id="@+id/radioNu" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="2dp" android:button="@null" android:text=" Nữ" android:maxLines="1" android:drawableLeft="@drawable/radio_button_selector" android:layout_weight="50"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="20">
            <ImageButton android:gravity="center" android:layout_gravity="center" android:id="@+id/btnxemBinhGiai" android:background="@drawable/btn_binhgiai" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/activity_gieo_que_button_height" android:contentDescription="XemBinhGiai"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
